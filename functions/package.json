    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "d3": "^7.9.0",
    "firebase-admin": "^12.0",
    "firebase-functions": "^5.0.1",
    "jsdom": "^24.1.0",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.8.2",
    "svg2img": "^1.0.0-beta.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.16",
    "@types/d3": "^7.4.3",
    "@types/jsdom": "^21.1.7",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": "^7",
    "@typescript-eslint/parser": "^7",
    "chai": "^5.1.1",
    "eslint": "^8.57",
    "eslint-config-google": "^0.14",
    "eslint-config-prettier": "^9",
    "eslint-plugin-import": "^2",
    "eslint-plugin-prettier": "^5",
    "firebase-functions-test": "^3.3.0",
    "mocha": "^10.6.0",
    "prettier": "^3",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "private": true
