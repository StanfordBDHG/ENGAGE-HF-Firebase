{
  "include": ["src"],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["esnext"],
    "jsx": "react-jsx",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "typedocOptions": {
    "includeVersion": true,
    "entryPoints": ["src/index.ts"]
  }
}
